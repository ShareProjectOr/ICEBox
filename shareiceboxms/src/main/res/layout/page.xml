<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/homePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:text="首页" />

        <TextView
            android:id="@+id/lastPage"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/homePage"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:text="@string/left"
            android:textColor="@color/gray_light_deep" />

        <LinearLayout
            android:id="@+id/pageItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lastPage"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/page"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edit_focused"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:padding="3dp"
                android:text="1" />

            <TextView
                android:id="@+id/intent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="跳转"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/nextPage"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/pageItem"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:text="@string/right"
            android:textColor="@color/gray_light_deep" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共 "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totalPageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 页 "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 条"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>