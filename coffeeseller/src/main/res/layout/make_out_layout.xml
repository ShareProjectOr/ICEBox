<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-100dp">

        <ImageView
            android:id="@+id/makeCenterImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/icon" />


        <ImageView
            android:id="@+id/makeRightImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:paddingBottom="80dp"
            android:src="@mipmap/ai_wawa" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/dialog_make_bng"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="150dp">

        <TextView
            android:id="@+id/errTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="对不起，咖啡制作失败了...\n1、门口有杯子\n2、其他错误"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="gone" />

        <include layout="@layout/progress_text_layout" />


    </LinearLayout>


</LinearLayout>