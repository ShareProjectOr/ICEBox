<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="300dp"
        android:layout_marginBottom="-100dp">

        <ImageView
            android:id="@+id/makeCenterImage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/down_cup" />


        <ImageView
            android:id="@+id/makeRightImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:paddingTop="40dp"
            android:src="@mipmap/ai_wawa" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@mipmap/dialog_make_bng"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="60dp">

        <TextView
            android:id="@+id/coffeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1234325346"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mkTimerCount"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_round"
            android:gravity="center"
            android:text="120s"
            android:textColor="@color/coffeeColor"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center">


            <include layout="@layout/progress_text_layout_1" />

        </LinearLayout>


        <TextView
            android:id="@+id/errTip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="对不起，咖啡制作失败了...\n1、门口有杯子\n2、其他错误"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>