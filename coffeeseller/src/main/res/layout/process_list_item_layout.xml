<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bunkersName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

           android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_one" />

        <TextView
            android:id="@+id/waterInterval"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_one" />

        <TextView
            android:id="@+id/waterCapacity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_one" />

        <TextView
            android:id="@+id/materialTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_one" />

        <TextView
            android:id="@+id/rotateSpeed"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_one" />

        <TextView
            android:id="@+id/stirSpeed"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_one" />

        <TextView
            android:id="@+id/waterType"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_one" />


    </LinearLayout>
</LinearLayout>
