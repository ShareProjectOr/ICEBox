<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="牛奶"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/taste_milk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/milk_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_taste_bng_shape"
                android:button="@null"
                android:gravity="center"
                android:padding="20dp"
                android:text="无奶"
                android:textColor="@color/selector_taste_text_color"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/milk_less"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_taste_bng_shape"
                android:button="@null"
                android:gravity="center"
                android:padding="20dp"
                android:text="少奶"
                android:textColor="@color/selector_taste_text_color"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/milk_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_taste_bng_shape"
                android:button="@null"
                android:gravity="center"
                android:padding="20dp"
                android:text="正常"
                android:textColor="@color/selector_taste_text_color"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/milk_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_taste_bng_shape"
                android:button="@null"
                android:gravity="center"
                android:padding="20dp"
                android:text="多奶"
                android:textColor="@color/selector_taste_text_color"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>