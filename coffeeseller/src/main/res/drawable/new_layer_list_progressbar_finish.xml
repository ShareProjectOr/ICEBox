<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="@dimen/progressbar_height" />
            <stroke
                android:width="1dp"
                android:color="@color/red" />
            <gradient
                android:centerColor="@color/white"
                android:endColor="@color/white"
                android:startColor="@color/white" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>
                <corners
                    android:bottomLeftRadius="@dimen/progressbar_height"
                    android:bottomRightRadius="0dp"
                    android:topLeftRadius="@dimen/progressbar_height"
                    android:topRightRadius="@dimen/progressbar_height" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/progressbar_height" />
                <stroke
                    android:width="1dp"
                    android:color="@color/orange" />
                <gradient
                    android:angle="90"
                    android:endColor="#f3630e"
                    android:startColor="#f5803b" />
            </shape>
        </clip>

    </item>
</layer-list>