<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menudialog_bg_gray"
    android:orientation="vertical"
    tools:context="fragment.FinanceManagerFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="fragment.FinanceManagerFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/orange"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/transaction_settlement"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/divider_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/shadow_line"
                android:dividerHeight="1.5dp"></ListView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/uppage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_style"
                android:text="@string/uppage"
                android:textSize="12sp" />

            <Button
                android:id="@+id/downpage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_style"
                android:text="@string/downpage"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/jumppage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number" />

            <TextView
                android:id="@+id/jump"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="@string/jump" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/top_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:background="@mipmap/backtop"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>