<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menudialog_bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/togglemenu"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/menubutton"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="所有订单"
            android:textColor="@color/orange" />


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/trade_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/shadow_line"
                android:dividerHeight="1.5dp"
                android:layerType="software" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/uppage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_style"
                android:text="@string/uppage"
                android:textSize="12sp" />

            <Button
                android:id="@+id/downpage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_style"
                android:text="@string/downpage"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/jumppage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number" />

            <TextView
                android:id="@+id/jump"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="@string/jump" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/top_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:background="@mipmap/backtop"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>

